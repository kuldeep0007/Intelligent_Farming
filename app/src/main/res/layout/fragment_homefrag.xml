<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.kuldeep.intelligent_farming.fragments.homefrag">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:background="@drawable/rect_edittext"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/soil_humidity"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:layout_weight="0.1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Soil Moisture"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="0.45"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="40%"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="0.45"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/rect_edittext"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:layout_margin="5dp"
                android:background="#FFFFFF"
                android:src="@drawable/soil_temperature" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Soil Temperature"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="0.45"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="48°C"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="0.45"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:background="@drawable/rect_edittext"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:src="@drawable/atmosp_temperature"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Atm Temp"/>
            <TextView
                android:id="@+id/atmtempvalue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="42°C"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_margin="10dp"
            android:background="@drawable/rect_edittext"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:src="@drawable/sprinkler"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Sprinkler"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:gravity="center"
                android:textSize="20sp"
                android:text="OFF"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
